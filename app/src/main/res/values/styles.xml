<resources>
    <!--Login-->
    <style name="Login" parent="AppTheme">
        <item name="android:textColor">@color/cadetBlue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/ed_border</item>
    </style>

    <style name="Login.Button" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_border</item>
    </style>

    <!--Statement first block-->
    <style name="Statement.Title" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/nameStatement</item>
    </style>

    <style name="Statement.Fields" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Statement.BankAccount" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/bankAccountStatement</item>
    </style>

    <style name="Statement.BalanceNumber" parent="AppTheme">
        <item name="android:text">@string/balanceNumberStatement</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Statement second block-->
    <style name="Statement.Title.Secondary" parent="AppTheme">
        <item name="android:textSize">17sp</item>
        <item name="android:text">@string/recentsStatement</item>
        <item name="android:textColor">@color/riverBed</item>
    </style>
    
    <!--Statement recyclerView-->
    <style name="Statement.Recycler.Title" parent="AppTheme">
        <item name="android:text">@string/paymentStatement</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cadetBlue</item>
    </style>
    
    <style name="Statement.Recycler.Date" parent="AppTheme">
        <item name="android:text">@string/dataStatement</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cadetBlue</item>
    </style>

    <style name="Statement.Recycler.Desc" parent="AppTheme">
        <item name="android:text">@string/descStatement</item>
        <item name="android:textColor">@color/riverBed</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Statement.Recycler.Value" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/valueStatement</item>
        <item name="android:textColor">@color/riverBed</item>
    </style>

</resources>
